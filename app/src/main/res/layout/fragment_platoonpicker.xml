<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BravoFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"


        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"


            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CompanyHeader"
                android:paddingBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:id="@+id/CompanyTitle"

                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentLeft="true"
                    />
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/CompanyLogo"
                    android:maxHeight="10dp"/>



            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/Motto"
                android:background="@color/colorPrimaryLight"
                android:textColor="@color/white"
                android:textSize="25sp"
                />

            <Space
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:id="@+id/space4"


                android:layout_alignTop="@+id/scroll"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textAlignment="center"
                android:id="@+id/COC"
                android:background="@color/colorPrimaryLight"
                android:textColor="@color/white"
                android:textSize="15sp"
                />

            <Space
                android:padding="40dp"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:id="@+id/space7"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:text="First Platoon"
                android:textSize="20sp"
                android:id="@+id/B1button"
                android:padding="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <Space

                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:id="@+id/space3"

                android:layout_alignTop="@+id/scroll"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:text="Second Platoon"
                android:textSize="20sp"
                android:id="@+id/B2button"
                android:padding="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal" />
            <Space

                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:id="@+id/space8"


                android:layout_alignTop="@+id/scroll"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:text="Third Platoon"
                android:textSize="20sp"
                android:id="@+id/B3button"
                android:padding="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <Space

                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:id="@+id/space9"


                android:layout_alignTop="@+id/scroll"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:text="Fourth Platoon"
                android:textSize="20sp"
                android:id="@+id/B4button"
                android:padding="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal" />
            <Space

                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:id="@+id/space12"


                android:layout_alignTop="@+id/scroll"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:text="Fifth Platoon"
                android:textSize="20sp"
                android:id="@+id/B5button"
                android:padding="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
