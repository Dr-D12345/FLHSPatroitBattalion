<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="drd.flhspatriotbattalion.Help">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Help and Options"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:id="@+id/space4" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="For any errors please contact S6 or email us at derekdevelop@gmail.com"
        android:id="@+id/textView5"
        android:layout_below="@+id/space4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:id="@+id/space5" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select what you would like to be notified for: "
        android:id="@+id/textView4"
        android:layout_below="@+id/space5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:text="Parade"
            android:id="@+id/textView6"
            android:textStyle="bold"
            android:padding="10dp"

            />

        <Switch
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:layout_below="@+id/textView4"
            android:padding="10dp"/>

        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:text="Drill Team"
            android:textStyle="bold"
            android:id="@+id/textView7"
            />


        <Switch
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/switch2"
            android:layout_below="@+id/switch1"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:text="Drum Corps"
            android:textStyle="bold"
            android:id="@+id/textView8"
            android:padding="10dp"
            />
        <Switch
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/switch3"
            android:layout_below="@+id/switch2"
            android:padding="10dp"/>

        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:text="Honor Guard"
            android:textStyle="bold"
            android:id="@+id/textView9"
            />


        <Switch
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/switch4"
            android:layout_below="@+id/switch3"
            android:padding="10dp"/>


        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:text="Raiders"
            android:textStyle="bold"
            android:id="@+id/textView10"
            />


        <Switch
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/switch5"
            android:layout_below="@+id/switch4"
            android:padding="10dp"/>
        <ImageButton
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/switch5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/s6"
            android:contentDescription="s6"
            />



</RelativeLayout>
